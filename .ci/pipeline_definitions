delivery-service:
  inherit:
    check-steps: &check-steps
      steps: &steps
        smoke_test:
          image: europe-docker.pkg.dev/gardener-project/releases/delivery-gear/delivery-service:latest
          execute: ../smoke_test.py
        lint:
          image: europe-docker.pkg.dev/gardener-project/releases/delivery-gear/delivery-service:latest
          execute: lint
        test:
          image: europe-docker.pkg.dev/gardener-project/releases/delivery-gear/delivery-service:latest
          execute: test

  base_definition:
    repo:
      disable_ci_skip: True
    traits:
      version: ~
      component_descriptor:
        component_name: ocm.software/delivery-gear/delivery-service
        ocm_repository: europe-docker.pkg.dev/gardener-project/releases
        ocm_repository_mappings:
        - repository: europe-docker.pkg.dev/gardener-project/releases
          prefix: ''

  jobs:
    pull-request:
      <<: *check-steps
      traits:
        pull-request: ~
        component_descriptor:
          ocm_repository: europe-docker.pkg.dev/gardener-project/snapshots

    update-dependencies:
      traits:
        update_component_deps:
          merge_policies:
          - component_names:
            - '^((?!github\.com/gardener/cc-utils).)*$' # everything except github.com/gardener/cc-utils
            merge_mode: manual
            merge_method: rebase
          - component_names:
            - 'github\.com/gardener/cc-utils'
            merge_mode: auto_merge
            merge_method: rebase
        cronjob:
          interval: 5m
        component_descriptor:
          ocm_repository: europe-docker.pkg.dev/gardener-project/snapshots

    automatic-release:
      steps:
        trigger-release:
          execute: trigger_release.py
          inputs:
            component_descriptor_dir: component_descriptor_dir
          vars:
            RELEASE_JOB_NAME: pipeline.variant("manual-release").job_name()
            PIPELINE_NAME: pipeline_descriptor.get("name")
          depends:
            - component_descriptor
      traits:
        notifications:
          cicd-team:
            on_error:
              triggering_policy: only_first
              recipients:
                - email_addresses:
                  - christian.cwienk@sap.com
                  - philipp.heil@sap.com
                  - j.brand@sap.com

    manual-release:
      steps:
        <<: *steps
        build_python_packages:
          output_dir: packages
      traits: &release-traits
        version:
          preprocess: finalize
          inject_effective_version: True
        publish:
          dockerimages:
            delivery-service:
              image: europe-docker.pkg.dev/gardener-project/releases/delivery-gear/delivery-service
              dockerfile: Dockerfile.service
              tag_as_latest: True
              inputs:
                steps:
                  build_python_packages: ~
            delivery-gear-extensions:
              image: europe-docker.pkg.dev/gardener-project/releases/delivery-gear/delivery-gear-extensions
              dockerfile: Dockerfile.extensions
              tag_as_latest: True
              inputs:
                steps:
                  build_python_packages: ~
            delivery-gear-extension-clamav:
              image: europe-docker.pkg.dev/gardener-project/releases/delivery-gear/delivery-gear-extension-clamav
              dockerfile: Dockerfile.extensions.clamav
              tag_as_latest: True
              inputs:
                steps:
                  build_python_packages: ~
          helmcharts:
          - name: delivery-service
            dir: charts/delivery-service
            registry: europe-docker.pkg.dev/gardener-project/snapshots/charts/ocm-gear
            mappings:
            - ref: ocm-resource:delivery-service.repository
              attribute: image.repository
            - ref: ocm-resource:delivery-service.tag
              attribute: image.tag
          - name: extensions
            dir: charts/extensions
            registry: europe-docker.pkg.dev/gardener-project/snapshots/charts/ocm-gear
            mappings:
            - ref: ocm-resource:delivery-gear-extensions.repository
              attribute: artefact-enumerator.image.repository
            - ref: ocm-resource:delivery-gear-extensions.tag
              attribute: artefact-enumerator.image.tag
            - ref: ocm-resource:delivery-gear-extensions.repository
              attribute: backlog-controller.backlog-controller.image.repository
            - ref: ocm-resource:delivery-gear-extensions.tag
              attribute: backlog-controller.backlog-controller.image.tag
            - ref: ocm-resource:delivery-gear-extensions.repository
              attribute: backlog-controller.bdba.image.repository
            - ref: ocm-resource:delivery-gear-extensions.tag
              attribute: backlog-controller.bdba.image.tag
            - ref: ocm-resource:delivery-gear-extension-clamav.repository
              attribute: backlog-controller.clamav.image.repository
            - ref: ocm-resource:delivery-gear-extension-clamav.tag
              attribute: backlog-controller.clamav.image.tag
            - ref: ocm-resource:delivery-gear-extensions.repository
              attribute: backlog-controller.issue-replicator.image.repository
            - ref: ocm-resource:delivery-gear-extensions.tag
              attribute: backlog-controller.issue-replicator.image.tag
            - ref: ocm-resource:delivery-gear-extensions.repository
              attribute: delivery-db-backup.image.repository
            - ref: ocm-resource:delivery-gear-extensions.tag
              attribute: delivery-db-backup.image.tag
        release:
          nextversion: bump_minor
          release_notes_policy: disabled
          release_commit_publishing_policy: tag_and_merge_back

    manual-release-bypass-ci:
      steps:
        build_python_packages:
          output_dir: packages
      traits:
        <<: *release-traits

    head-update:
      <<: *check-steps
      traits:
        version: ~
        notifications:
          default:
            on_error:
              triggering_policy: only_first
        component_descriptor:
          ocm_repository: europe-docker.pkg.dev/gardener-project/snapshots
